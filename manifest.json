{
    "name": "JuDic",
    "version": "0.0.1",
    "manifest_version": 3,
    "description": "Selecione um termo jur√≠dico para ver seu significado",
    "action": {
        "default_popup": "popup.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+1"
            }
        },
        "bark": {
            "suggested_key": {
                "default": "Alt+Shift+3"
            },
            "description": "Makes Acho bark the title at the bottom right of the current page"
        }
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "node_modules/@webcomponents/custom-elements/custom-elements.min.js",
                "medium-highlighter.js",
                "content.js",
                "notification.js"
            ],
            "css": [
                "notification.css"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ]
}